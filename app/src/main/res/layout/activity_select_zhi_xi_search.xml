<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hr.ui.activity.SelectZhiXiSearchActivity">

    <!-- start title -->
    <RelativeLayout
        android:id="@+id/rl_searchzhixi_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/new_main">

        <ImageView
            android:id="@+id/iv_searchzhixi_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_fanhui" />

        <TextView
            android:id="@+id/tv_searchzhixi_jobnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择职系"
            android:textColor="#fff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/post_searchzhixi_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- end title -->

    <ListView
        android:id="@+id/functionzhixiselect_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_searchzhixi_top"
        android:cacheColorHint="#0000"
        android:divider="#FFFFFF"
        android:focusable="true"
        android:scrollbars="none"></ListView>

</RelativeLayout>
