<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_createresume_jobexp_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/new_main">

        <ImageView
            android:id="@+id/iv_createresume_jobexp_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_fanhui"
             />

        <TextView
            android:id="@+id/tv_createresume_jobexp_jobnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="完成简历"
            android:textColor="#fff"
            android:textSize="22sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <View
            android:background="#FBC042"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作经验"
            android:textColor="#FBC042" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_resumejob_haveexpe"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp"
                android:text="我有工作经验"
                android:textColor="#333333"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_havejobexp_check"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:src="@mipmap/kaiguan_guan" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_createresume_jobexp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#EBEBEB" />

        <RelativeLayout
            android:id="@+id/rl_createresume_info_save2"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#EBEBEB"
            android:gravity="center">

            <RelativeLayout
               style="@style/bt_orange"
                android:background="@drawable/btn_1chang"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_createresume_info_save2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建完成"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#EBEBEB" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/elv_createresume_jobexp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_createresume_jobexp_top"
        android:background="#F6F6F6"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:groupIndicator="@null"
        android:scrollbars="none" />

</LinearLayout>
