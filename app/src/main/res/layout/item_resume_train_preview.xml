<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:layout_width="24dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
           />
        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_alignBottom="@+id/tv_previewresume_traintime"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/jianli_yulan_xiaoquan" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EBEBEB" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_myresume_train_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawableLeft="@mipmap/xiugai1"
                android:drawablePadding="5dp"
                android:text="编辑"
                android:textColor="#F39700"
                android:layout_marginEnd="20dp"
                android:layout_alignTop="@+id/tv_previewresume_traintime"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tv_previewresume_traintime"
                style="@style/resume_previewresume_infoname"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="11dp"
                android:text="2006年12月-2012年12月" />


            <TextView
                android:id="@+id/tv_previewresume_trainname"
                style="@style/resume_previewresume_infoname"
                android:layout_alignTop="@+id/textView10"
                android:layout_toEndOf="@+id/textView10"
                android:layout_toRightOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView10"
                style="@style/resume_previewresume_infoname"
                android:layout_alignLeft="@+id/tv_previewresume_traintime"
                android:layout_alignStart="@+id/tv_previewresume_traintime"
                android:layout_below="@+id/tv_previewresume_traintime"
                android:layout_marginTop="10dp"
                android:text="培训机构：" />

            <TextView
                android:id="@+id/textView13"
                style="@style/resume_previewresume_infoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="12dp"
                android:text="培训课程：" />

            <TextView
                android:id="@+id/textView14"
                style="@style/resume_previewresume_infoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="12dp"
                android:text="培训地点：" />

            <TextView
                android:id="@+id/textView12"
                style="@style/resume_previewresume_infoname"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="12dp"
                android:text="培训描述：" />

            <TextView
                android:id="@+id/tv_previewresume_traindesp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:text="培训描述"
                android:textColor="#999999"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_previewresume_traincourse"
                style="@style/resume_previewresume_infoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView13"
                android:layout_toEndOf="@+id/textView13"
                android:layout_toRightOf="@+id/textView13" />

            <TextView
                android:id="@+id/tv_previewresume_trainplace"
                style="@style/resume_previewresume_infoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView14"
                android:layout_toEndOf="@+id/textView14"
                android:layout_toRightOf="@+id/textView14" />

            <TextView
                android:id="@+id/textView11"
                style="@style/resume_previewresume_infoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="12dp"
                android:text="培训证书：" />

            <TextView
                android:id="@+id/tv_previewresume_traincertificate"
                style="@style/resume_previewresume_infoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView11"
                android:layout_toEndOf="@+id/textView11"
                android:layout_toRightOf="@+id/textView11" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#fff" />
    </LinearLayout>


</LinearLayout>