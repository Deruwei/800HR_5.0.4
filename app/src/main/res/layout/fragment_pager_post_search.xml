<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="#f6f6f6"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_post_net"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/net11" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_post_function"
                        android:layout_width="match_parent"
                        android:layout_height="47dp">

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:layout_marginStart="14dp"
                            android:text="选择职能"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_post_function"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="21dp"
                            android:layout_marginRight="21dp"
                            android:layout_toLeftOf="@+id/imageView27"
                            android:layout_toStartOf="@+id/imageView27"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="全部职能"
                            android:textColor="#666666"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="12dp"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/jiantou_right" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="11dp"
                        android:background="#EBEBEB" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rl_post_medical"
                        android:layout_width="match_parent"
                        android:layout_height="47dp">

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:layout_marginStart="14dp"
                            android:text="医疗职系"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_post_medical"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="21dp"
                            android:layout_marginRight="21dp"
                            android:layout_toLeftOf="@+id/imageView28"
                            android:layout_toStartOf="@+id/imageView28"
                            android:gravity="right"
                            android:text="请选择"
                            android:textColor="#666666"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="12dp"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/jiantou_right" />

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:background="#f6f6f6"
                    android:gravity="center">

                    <Button
                        android:id="@+id/bt_post_search"
                        style="@style/bt_orange"
                        android:background="@drawable/linear_yuanhu_button"
                        android:text="搜职位"
                        android:textColor="#fff" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_post_clear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#fff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_postsearch_text1"
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <ImageView
                                android:id="@+id/imageView31"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:src="@mipmap/lishi" />

                            <TextView
                                android:id="@+id/tv_postsearch_text1"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="9dp"
                                android:layout_toEndOf="@+id/imageView31"
                                android:layout_toRightOf="@+id/imageView31"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="历史记录1"
                                android:textColor="#666666"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@mipmap/jiantou_right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="12dp"
                                android:background="#ebebeb" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_postsearch_text2"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/rl_postsearch_text3"
                            >

                            <ImageView
                                android:id="@+id/imageView3103"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:src="@mipmap/lishi" />

                            <TextView
                                android:id="@+id/tv_postsearch_text2"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="9dp"
                                android:layout_toEndOf="@+id/imageView3103"
                                android:layout_toRightOf="@+id/imageView3103"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="历史记录2"
                                android:textColor="#666666"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@mipmap/jiantou_right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="12dp"
                                android:background="#ebebeb" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_postsearch_text3"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/rl_postsearch_text4"
                            >

                            <ImageView
                                android:id="@+id/imageView3102"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:src="@mipmap/lishi" />

                            <TextView
                                android:id="@+id/tv_postsearch_text3"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="9dp"
                                android:layout_toEndOf="@+id/imageView3102"
                                android:layout_toRightOf="@+id/imageView3102"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="历史记录3"
                                android:textColor="#666666"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@mipmap/jiantou_right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="12dp"
                                android:background="#ebebeb" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_search_post_clear"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="#fff"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清空搜索条件"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F6F6F6"
                    android:gravity="center_horizontal">

                    <ListView
                        android:id="@+id/lv_postsearch_advertistment"
                        style="@style/pager_keyword_search_history"
                        android:layout_margin="10dp"
                        android:divider="#00000000"
                        android:padding="3dp"
                        android:scrollbars="none" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
