<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_popupwindow_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F39800">

        <TextView
            android:id="@+id/tv_popupwindow_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tv_popupwindow_confirm"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_popupwindow_jobnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_popupwindow_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_popupwindow_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#fff"
            android:divider="@null"
            android:listSelector="#f9f9f9"
            android:paddingTop="10dp"
            android:scrollbars="none" />
        <!--  android:choiceMode ="singleChoice"-->
        <ListView
            android:id="@+id/lv_popupwindow_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#f9f9f9"
            android:divider="@null"
            android:listSelector="#00000000"
            android:paddingTop="10dp"
            android:scrollbars="none" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"/>
</LinearLayout>
