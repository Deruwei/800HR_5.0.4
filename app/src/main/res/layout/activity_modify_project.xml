<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.hr.ui.activity.ModifyProjectActivity">

    <RelativeLayout
        android:id="@+id/rl_resume_modifyproject_top"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@color/new_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/iv_resume_modifyproject_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="项目经验"
            android:textColor="#fff"
            android:textSize="22sp" />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_resume_modifyproject_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:text="项目名称"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:layout_toRightOf="@+id/textView50"
                    android:id="@+id/et_resume_item_modifyproject_projectame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView50"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:maxEms="30"
                    android:gravity="right"
                    android:hint="请输入项目名称"
                    android:textSize="14sp" />
            </RelativeLayout>
            <View
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:background="#efefef"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/textView50223"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:text="开始时间"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_resume_item_modifyproject_starttime"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@+id/imageView45"
                    android:layout_toStartOf="@+id/imageView45"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="请选择时间"
                    android:textColor="#F7931E" />

                <ImageView
                    android:id="@+id/imageView45"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/jiantou_right" />

            </RelativeLayout>
            <View
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:background="#efefef"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/textView50222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:text="结束时间"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_resume_item_modifyproject_endtime"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@+id/imageView45221"
                    android:layout_toStartOf="@+id/imageView45221"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="请选择时间"
                    android:textColor="#F7931E" />

                <ImageView
                    android:id="@+id/imageView45221"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/jiantou_right" />

            </RelativeLayout>
            <View
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:background="#efefef"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/textView5012333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:text="项目职务"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_resume_item_modifyproject_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView5012333"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入项目职务"
                    android:textSize="14sp" />
            </RelativeLayout>
            <View
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:background="#efefef"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:id="@+id/textView502221"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp"
                    android:text="项目描述"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginRight="@dimen/dimen_13px"
                    android:layout_alignLeft="@+id/textView502221"
                    android:layout_alignStart="@+id/textView502221"
                    android:layout_below="@+id/textView502221"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/et_resume_item_modifyproject_describe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_3px"
                        android:background="@drawable/bg_edit"
                        android:gravity="left"
                        android:hint="请填写项目描述，限1000字以内"
                        android:maxEms="4000"
                        android:scrollbars="vertical"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:id="@+id/textView50221"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp"
                    android:text="项目职责"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignLeft="@+id/textView50221"
                    android:layout_alignStart="@+id/textView50221"
                    android:layout_below="@+id/textView50221"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/dimen_13px">

                    <EditText

                        android:id="@+id/et_resume_item_modifyproject_duty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_3px"
                        android:background="@drawable/bg_edit"
                        android:gravity="left"
                        android:hint="请填写项目职责，限1000字以内"
                        android:maxEms="1000"
                        android:scrollbars="vertical"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="13"
                android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_resume_item_modifyproject_delete"
                    android:layout_marginLeft="@dimen/dimen_20px"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40px"
                    android:paddingLeft="@dimen/dimen_50px"
                    android:paddingRight="@dimen/dimen_50px"
                    android:background="@drawable/btn_1chang"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#fff"
                    android:textSize="14sp"/>
            </RelativeLayout>
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_resume_item_modifyproject_save"
                    android:layout_marginLeft="@dimen/dimen_20px"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40px"
                    android:paddingLeft="@dimen/dimen_50px"
                    android:paddingRight="@dimen/dimen_50px"
                    android:background="@drawable/btn_1chang"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
