<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="@drawable/bg_white_circle"
    android:layout_marginLeft="@dimen/dimen_5px"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_5px"
    android:paddingTop="@dimen/dimen_5px"
    android:layout_marginRight="@dimen/dimen_5px"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@mipmap/jiantou_right" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imageView1"
        android:ems="10"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="软件工程师"
        android:textColor="#9D9D9A"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/company_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_name"
        android:layout_toLeftOf="@+id/imageView1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="软件开发"
        android:textColor="#a4a4a2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/company_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_scale"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="2013-2-10"
        android:textColor="#a4a4a2"
        android:textSize="12sp" />

</RelativeLayout>