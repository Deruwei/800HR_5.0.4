<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context="com.hr.ui.activity.ResumeEduInfoActivity">

    <RelativeLayout
        android:id="@+id/rl_resume_eduinfo_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/new_main">

        <ImageView
            android:id="@+id/iv_resume_eduinfo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_fanhui" />

        <TextView
            android:id="@+id/tv_resume_eduinfo_jobnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="教育背景"
            android:textColor="#fff"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/tv_resume_eduinfo_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="上传"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ExpandableListView
        android:scrollbars="none"
        android:id="@+id/elv_resume_eduinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_resume_eduinfo_top"
        android:background="#F6F6F6"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:groupIndicator="@null"/>
</RelativeLayout>
