<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50px">
    <TextView
        android:layout_marginRight="22dp"
        android:id="@+id/tv_modifyLanguage_deleteView"
        style="@style/reusme_myresume_tvhead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:textColor="@color/new_main"
        android:text="@string/delete" />
    <RelativeLayout
        android:id="@+id/rl_ModifyLanguage_TestLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_15px"
        android:layout_toRightOf="@+id/tv_modifyLanguage_deleteView">

        <TextView
            android:id="@+id/tv_ModifyLanguage_TestType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="请选择"
            android:textColor="@color/new_main"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageViewModifyLanguage"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5px"
            android:layout_toRightOf="@+id/tv_ModifyLanguage_TestType1"
            android:src="@mipmap/jiantou_right" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_ModifyLanguage_TestNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:gravity="right"
        android:hint="请填写号码"
        android:textColorHint="@color/text_color_999"
        android:textSize="14sp" />
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1px"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginStart="13dp"
        android:background="#efefef" />
    </RelativeLayout>
</LinearLayout>