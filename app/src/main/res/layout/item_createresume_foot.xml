<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/elv_createresume_eduinfo"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_createresume_item_addeud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:text="+添加教育背景"
            android:textColor="#007AFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView46"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/xiajiantou" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/elv_create_createresume_eduinfo"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#EBEBEB" />

        <RelativeLayout
            android:id="@+id/rl_createresume_info_save"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#EBEBEB"
            android:gravity="center">

            <RelativeLayout
               style="@style/bt_orange"
                android:background="@drawable/btn_1chang"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_createresume_info_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存并进入下一项"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#EBEBEB" />
    </LinearLayout>
</LinearLayout>