<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/item_selector_rec"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_10px"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/functionSecond_text"
            android:text="全部职位"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/functionSecond_image"
            android:src="@mipmap/duihao"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_width="@dimen/dimen_15px"
            android:layout_height="@dimen/dimen_15px" />
    </RelativeLayout>
</LinearLayout>