<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_subscription_top"
        style="@style/title_rl_scale">

        <ImageView
            android:id="@+id/iv_subscription_back"
            style="@style/title_iv_back" />

        <TextView
            android:id="@+id/tv_subscription_jobnum"
            style="@style/title_tv_textsize"
            android:text="订阅设置" />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView

                    style="@style/subscription_setting_titletext"
                    android:text="订阅关键字" />

                <EditText
                    android:id="@+id/et_subscription_keyword"
                    android:layout_width="200dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入订阅关键字（可不填）"
                    android:textColor="#666666"
                    android:textColorHint="#CCCCCC"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="职能选择" />

                <TextView
                    android:id="@+id/tv_subscription_post"
                    style="@style/subscription_setting_righttext"
                    android:text="请选择职能" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="地区选择" />

                <TextView
                    android:id="@+id/tv_subscription_place"
                    style="@style/subscription_setting_righttext"
                    android:text="请选择地区" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="工作经验" />

                <TextView
                    android:id="@+id/tv_subscription_jobexp"
                    style="@style/subscription_setting_righttext"
                    android:text="不限" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="发布时间" />

                <TextView
                    android:id="@+id/tv_subscription_releasetime"
                    style="@style/subscription_setting_righttext"
                    android:text="不限" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="学历要求" />

                <TextView
                    android:id="@+id/tv_subscription_edu"
                    style="@style/subscription_setting_righttext"
                    android:text="不限" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="公司规模" />

                <TextView
                    android:id="@+id/tv_subscription_scaleofcom"
                    style="@style/subscription_setting_righttext"
                    android:text="不限" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="薪资待遇" />

                <TextView
                    android:id="@+id/tv_subscription_salary"
                    style="@style/subscription_setting_righttext"
                    android:text="不限" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="工作性质" />

                <TextView
                    android:id="@+id/tv_subscription_category"
                    style="@style/subscription_setting_righttext"
                    android:text="不限" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="接收时段" />

                <TextView
                    android:id="@+id/tv_subscription_receivetime"
                    style="@style/subscription_setting_righttext"
                    android:text="09:00-20:00" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="订阅提示音" />

                <ImageView
                    android:id="@+id/iv_subscription_subsound"
                    style="@style/subscription_setting_iv" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="订阅通知" />

                <ImageView
                    android:id="@+id/iv_subscription_subinfo"
                    style="@style/subscription_setting_iv" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/subscription_setting_titletext"
                    android:text="企业来信" />

                <ImageView
                    android:id="@+id/iv_subscription_subcomemail"
                    style="@style/subscription_setting_iv" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:id="@+id/rl_subscription_save"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#EBEBEB"
                android:gravity="center">
                <RelativeLayout
                    style="@style/bt_orange"
                    android:background="@drawable/btn_1chang"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_subscription_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#EBEBEB" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
