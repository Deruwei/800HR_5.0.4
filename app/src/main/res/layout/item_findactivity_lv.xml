<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_circle"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/famous_enterprise_niv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:padding="12dp"
        android:scaleType="fitXY"></ImageView>

    <TextView
        android:id="@+id/famous_enterprise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:text="英才网联（北京）科技有限公司"
        android:textColor="#FF585757"
        android:textSize="16sp" />
    <LinearLayout
        android:id="@+id/ll_enterprise_type1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="公司性质："
            android:textColor="#FF585757"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/famous_enterprise_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="国有企业"
            android:textColor="#FF585757"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_enterprise_number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="公司规模："
            android:textColor="#FF585757"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/famous_enterprise_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="100-499"
            android:textColor="#FF585757"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>