<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/new_main">

        <ImageView
            android:id="@+id/iv_selectfunction_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="职能选择"
            android:textColor="#fff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_selectfunction_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout3"
        android:background="#FFFFFF">

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="已选择职能"
            android:textColor="#666666"
            android:textSize="18sp"
            android:id="@+id/tv_selectfunction_functioninfo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/3"
            android:textColor="#666666"
            android:textSize="14sp"
            android:id="@+id/textView27"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView30"
            android:layout_toStartOf="@+id/imageView30" />
        <TextView
            android:id="@+id/tv_selectfunction_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#F39D0D"
            android:textSize="14sp"
            android:layout_alignTop="@+id/textView27"
            android:layout_toLeftOf="@+id/textView27"
            android:layout_toStartOf="@+id/textView27" />
        <ImageView
            android:layout_width="13dp"
            android:layout_height="7dp"
            android:src="@mipmap/zhinengxuanze_xiala"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:id="@+id/imageView30"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f6f6f6"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout5"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <ListView
            android:divider="@null"
            android:id="@+id/lv_selectfunction_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"></ListView>
        <ListView
            android:divider="@null"
            android:id="@+id/lv_selectfunction_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"></ListView>
    </LinearLayout>
</RelativeLayout>
