<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/item_selector_rec"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_selectCity_secondName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="@dimen/dimen_15px"
            android:paddingTop="@dimen/dimen_8px"
            android:paddingBottom="@dimen/dimen_8px"
            android:id="@+id/tv_selectCity_secondName"
            android:padding="@dimen/dimen_5px"
            android:text="北京"
            android:textSize="@dimen/text_16px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_selectCity_secondName"
            android:layout_marginRight="@dimen/dimen_5px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/duihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1px"
        android:background="@color/view_color"/>
</LinearLayout>