<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dimen_5px"
    android:layout_marginLeft="@dimen/dimen_5px"
    android:paddingBottom="8dp"
    android:background="@drawable/bg_white_circle"
    android:paddingTop="8dp">

    <CheckBox
        android:id="@+id/cb_item_searchjobimage_select"
        style="@style/checkbox_searchjoblv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/rl_item_searchjoblvimage_click"
        android:background="@drawable/item_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cb_item_searchjobimage_select"
        android:layout_toRightOf="@+id/cb_item_searchjobimage_select">

        <ImageView
            android:id="@+id/iv_item_searchjoblvimage_poster"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_item_searchjobimage_jobname"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_searchjoblvimage_companyname"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_item_searchjoblvimage_companyname"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="施工图设计师"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_searchjoblvimage_companyname"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_item_searchjobimage_cityname"
            android:layout_alignRight="@+id/tv_item_searchjobimage_cityname"
            android:layout_below="@+id/tv_item_searchjobimage_jobname"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="公司名公司名"
            android:textColor="#999999"
            android:textSize="14sp" />
        <!--
            <TextView
                android:id="@+id/tv_item_searchjoblvimage_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学历"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_alignBottom="@+id/tv_item_searchjobimage_jobname"
                android:layout_toLeftOf="@+id/textView28"
                android:layout_toStartOf="@+id/textView28" />
        -->
        <TextView
            android:id="@+id/tv_item_searchjobimage_cityname"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_searchjoblvimage_companyname"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@+id/iv_item_searchjoblvimage_jobinfo"
            android:layout_toStartOf="@+id/iv_item_searchjoblvimage_jobinfo"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="地点"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_searchjobimage_cityname"
            android:layout_toLeftOf="@+id/tv_item_searchjoblvimage_releasetime"
            android:layout_toStartOf="@+id/tv_item_searchjoblvimage_releasetime"
            android:text="发布: "
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_searchjoblvimage_releasetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_item_searchjobimage_cityname"
            android:layout_alignRight="@+id/tv_item_searchjobimage_cityname"
            android:layout_below="@+id/tv_item_searchjobimage_cityname"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="2015.12.23"
            android:textColor="#999999"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_item_searchjoblvimage_jobinfo"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/jiantou_right" />

        <TextView
            android:id="@+id/tv_item_searchjoblvimage_applycollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_item_searchjobimage_cityname"
            android:layout_alignRight="@+id/tv_item_searchjobimage_cityname"
            android:layout_below="@+id/tv_item_searchjoblvimage_releasetime"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="已收藏   已投递"
            android:textColor="#3CA9C4"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="13dp"
        android:background="#ebebeb" />-->
</RelativeLayout>