<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hr.ui.activity.RefuseCompanyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_refusecompany_top"
            style="@style/title_rl_scale">

            <ImageView
                android:id="@+id/iv_refusecompany_back"
                style="@style/title_iv_back" />

            <TextView
                style="@style/title_tv_textsize"
                android:text="公司屏蔽" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="被您屏蔽掉的公司，无法搜索到您的任何简历。"
            android:textColor="#FD8468"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_refusecom_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/linear_yuanhu_search"
            android:hint="请输入关键词"
            android:padding="5dp"
            android:textColorHint="#CCCCCC" />

        <Button
            android:id="@+id/bt_refusecom_add"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_1chang"
            android:text="添加"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/refuse_com_agreement"
            android:textColor="#999999"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已添加 "
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_refusecom_add1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#F7931E"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 个关键词，还可以添加 "
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_refusecom_add2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#F7931E"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 个"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEBEB" />

        <ListView
            android:id="@+id/lv_refusecom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:listSelector="#f9f9f9"
            android:scrollbars="none"></ListView>
    </LinearLayout>
</LinearLayout>
