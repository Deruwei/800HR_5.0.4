<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F6F6F6">

    <RelativeLayout
        android:id="@+id/rl_resume_selfassess_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44px"
        android:background="@color/new_main">

        <ImageView
            android:id="@+id/iv_resume_selfassess_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_fanhui" />

        <TextView
            android:id="@+id/tv_resume_selfassess_jobnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="自我评价"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_22" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_resume_selfassess_top">

        <EditText
            android:id="@+id/et_resume_selfassess"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dimen_10px"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:layout_height="@dimen/dimen_250px"
            android:layout_marginTop="@dimen/dimen_21px"
            android:background="@drawable/bg_edit"
            android:gravity="top|left"
            android:padding="@dimen/dimen_5px"
            android:hint="请填写自我评价，限500字以内"
            android:maxEms="500"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_15" />
        <RelativeLayout
            android:id="@+id/rl_resume_selfassess_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40px"
            android:layout_below="@+id/et_resume_selfassess"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/dimen_20px"
            android:layout_marginRight="@dimen/dimen_20px"
            android:background="@drawable/btn_1chang"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
