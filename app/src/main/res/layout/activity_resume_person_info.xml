                    android:text="现居住地" />

                <TextView
                    android:id="@+id/tv_resume_personinfo_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@+id/imageView4501032"
                    android:layout_toStartOf="@+id/imageView4501032"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="请选择地点"
                    android:textColor="#F7931E" />

                <ImageView
                    android:id="@+id/imageView4501032"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/jiantou_right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
