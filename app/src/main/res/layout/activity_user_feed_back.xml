<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context="com.hr.ui.activity.UserFeedBackActivity">

    <RelativeLayout
        android:id="@+id/rl_userfeedback_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/new_main">

        <ImageView
            android:id="@+id/iv_userfeedback_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用户反馈"
            android:textColor="#fff"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="您的建议"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView55"
            android:layout_toEndOf="@+id/textView55"
            android:layout_toRightOf="@+id/textView55"
            android:text="（500字以内）"
            android:textColor="#999999"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/et_setting_userback"
            style="@style/change_width"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="left"
            android:maxEms="500"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/textView5511"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="您的邮箱"
            android:textColor="#333333"
            android:textSize="18sp" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBottom="@+id/textView5511"-->
            <!--android:layout_toEndOf="@+id/textView5511"-->
            <!--android:layout_toRightOf="@+id/textView5511"-->
            <!--android:text="（选填）"-->
            <!--android:textColor="#999999"-->
            <!--android:textSize="15sp" />-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/et_setting_userback_email"
            style="@style/change_width"
            android:layout_height="40dp"
            android:background="#fff"
            android:gravity="left"
            android:singleLine="true"
            android:hint="输入您的邮箱，我们会第一时间回复您。"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/rl_userback_save"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        style="@style/bt_orange"
        android:background="@drawable/btn_1chang">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>
